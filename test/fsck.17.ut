## -*- shell-script -*-

TOOL=ute
INFILE="${srcdir}/mux.7.ref.ute"
OUTFILE=$(mktemp "/tmp/tmp.XXXXXXXX")
COMMENT="testing ex situ compression"
CMDFILE=$(mktemp "/tmp/tmp.XXXXXXXX")

endian()
{
	ind=$(echo -n I | od -to2 | head -n1 | cut -f2 -d" " | cut -c6)
	if test "${ind}" = "0"; then
		echo "big"
	elif test "${ind}" = "1"; then
		echo "little"
	else
		echo "unknown"
	fi
}

if test "$(endian)" = "big"; then
	REFFILE="${srcdir}/fsck.17.ref.beute"
else
	REFFILE="${srcdir}/fsck.17.ref.leute"
fi

cat <<EOF > "${CMDFILE}"
"\${TOOL}" fsck --compress -o '${OUTFILE}' '${INFILE}'
EOF

## fsck.17.ut ends here
